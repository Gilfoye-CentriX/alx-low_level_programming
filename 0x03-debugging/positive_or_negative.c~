#include <stdlib.h>
#include <time.h>
#include <stdio.h>

/**
 * main - Entry point
 *
 * Return: Always 0 (Success)
 */
int positive_or_negative("%d",int n)
{
  if (n >= 0)
    {
      printf("%d is positive \n");
    }
  else if (n < 0)
    {
      printf("%d is negative \n");
    }
  else
    {
      printf("%d is zero \n");
    }

  return (0);
}
